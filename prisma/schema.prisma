// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model Session {
  id          String   @id @map("_id") @default(auto()) @db.ObjectId
  shop        String
  state       String
  isOnline    Boolean
  scope       String
  accessToken String
  expires     DateTime?
  createdAt   DateTime @default(now())

  @@map("shopify_sessions")
}
