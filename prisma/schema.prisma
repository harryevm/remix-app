generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model Session {
  session_id    String  @id @default(auto()) @map("_id") @db.ObjectId
  id            String  @unique
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        String?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean   @default(false)
  emailVerified Boolean   @default(false)
}


model Trevor {
  id                   String   @id @map("_id") @default(auto()) @db.ObjectId
  name                 String
  email                String
  phone                String
  address              String
  address2             String
  city                 String
  zip                  String
  neighborhood         String
  propertyType         String   @map("property-type")
  homeSize             String   @map("home-size")
  lotSize              String   @map("lot-size")
  lotUnit              String
  yearBuilt            String   @map("year-built")
  bedrooms             String
  bathrooms            String
  heating              String
  cooling              String
  waterSource          String
  sewer                String
  otherUtilities       String
  garage               String
  garageSpecify        String   @map("garage-specify")
  basement             String
  outdoorFeatures      String
  additionalFeatures   String
  listingCheckbox      String
  mediaRelease         String
  mediaReleaseDate     DateTime
  description          String
  askingPrice          String
  preferredContact     String
  contactHours         String
  agencyCheckbox       String
  agencySignature      String
  agencyDate           DateTime
  fairHousingCheckbox  String
  fairHousingSignature String
  fairHousingDate      DateTime
  propertyCheckbox     String
  propertySignature    String
  propertyDate         DateTime
  listingSignature     String
  listingDate          DateTime
  createdAt            DateTime @default(now())

  propertyPhotos       String[] // Use String[] for array of URLs or file identifiers
  agencyAgreement      String[]
  fairHousing          String[]
  propertyDisclosure   String[]
  listingAgreement     String[]
}
