generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model Session {
  id          String   @id @map("_id")  // Must be string to store Shopify session ID
  shop        String
  state       String
  isOnline    Boolean
  scope       String
  accessToken String
  expires     DateTime?
  createdAt   DateTime @default(now())
}
